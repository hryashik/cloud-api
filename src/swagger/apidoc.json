{
   "openapi": "3.0.0",
   "info": {
      "title": "cloud-api",
      "version": "1.0.0",
      "description": "Description cloud-api"
   },
   "tags": [
      {
         "name": "auth",
         "description": "User authentication"
      }
   ],
   "components": {
      "schemas": {
         "signupDto": {
            "type": "object",
            "properties": {
               "email": {
                  "type": "string",
                  "format": "email"
               },
               "username": {
                  "type": "string",
                  "minLength": 4
               },
               "password": {
                  "type": "string"
               }
            }
         },
         "loginDto": {
            "type": "object",
            "properties": {
               "email": {
                  "type": "string",
                  "format": "email"
               },
               "password": {
                  "type": "string"
               }
            }
         },
         "token": {
            "type": "object",
            "properties": {
               "token": {
                  "type": "string"
               }
            }
         }
      }
   },
   "paths": {
      "/auth/signup": {
         "post": {
            "tags": ["auth"],
            "summary": "Signup",
            "description": "Create a user, email and username must be unique",
            "requestBody": {
               "required": true,
               "content": {
                  "application/json": {
                     "schema": {
                        "$ref": "#/components/schemas/signupDto"
                     }
                  }
               }
            },
            "responses": {
               "200": {
                  "description": "OK",
                  "content": {
                     "application/json": {
                        "schema": {
                           "$ref": "#/components/schemas/token"
                        }
                     }
                  }
               },
               "409": {
                  "description": "Credentials is taken"
               }
            }
         }
      },
      "/auth/login": {
         "post": {
            "tags": ["auth"],
            "summary": "Login",
            "description": "Verify user by email and password",
            "requestBody": {
               "required": true,
               "content": {
                  "application/json": {
                     "schema": {
                        "$ref": "#components/schemas/loginDto"
                     }
                  }
               }
            },
            "responses": {
               "200": {
                  "description": "OK",
                  "content": {
                     "application/json": {
                        "schema": {
                           "$ref": "#/components/schemas/token"
                        }
                     }
                  }
               },
               "401": {
                  "description": "Credentials is wrong"
               }
            }
         }
      }
   }
}